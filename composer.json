{
    "name": "marem/payum-paybox",
    "type": "library",
    "description": "Paybox extension for Payum",
    "keywords": [
        "payum",
        "paybox",
        "payment"
    ],
    "homepage": "https://github.com/le-phare/payum-paybox",
    "license": "MIT",
    "authors": [
        {
            "name": "Matthieu REMY",
            "email": "remy.matthieu@gmail.com",
            "homepage": "https://github.com/remyma"
        }
    ],
    "require": {
        "php": "^7.1",
        "payum/core": "^1.3",
        "ext-openssl": "*",
        "elao/enum": "^1.11"
    },
    "require-dev": {
        "php-http/guzzle6-adapter": "^1.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "^0.12.50",
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "Marem\\PayumPaybox\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Marem\\PayumPaybox\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.3-dev"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse -c phpstan.neon",
        "lint:fix": [
            "vendor/bin/php-cs-fixer --config=.php_cs.dist --verbose fix src client tests"
        ],
        "lint:cs-fixer": [
            "vendor/bin/php-cs-fixer --config=.php_cs.dist --dry-run --verbose --path-mode=intersection fix src client tests"
        ],
        "lint": [
            "@analyse",
            "@lint:cs-fixer"
        ],
        "test": "vendor/bin/phpunit"
    }
}
